@model CurrencyConverter.Models.CurrencyConversionViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currency Converter</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center mb-4">Currency Converter</h1>
            <form asp-controller="Home" asp-action="ConvertCurrency" method="post">
                <div class="input-group mb-3">
                    <select asp-for="SourceCurrency" asp-items="@(new SelectList(Model.CurrencySymbols))" class="form-select"></select>
                    <input asp-for="InputAmount" class="form-control" placeholder="Amount" />
                </div>
                <div class="input-group mb-3">
                    <select asp-for="TargetCurrency" asp-items="@(new SelectList(Model.CurrencySymbols))" class="form-select"></select>
                    <input asp-for="ConvertedAmount" class="form-control" placeholder="Converted Amount" value="@(Model.ConvertedAmount.HasValue ? Model.ConvertedAmount.Value.ToString() : string.Empty)" readonly />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Convert</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
